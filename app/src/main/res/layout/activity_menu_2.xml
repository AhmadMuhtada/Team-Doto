<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.helmi_mii.mobile_ova.menu_2"
    android:background="#00CCCC">

    <com.imangazaliev.circlemenu.CircleMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/circleMenu"
        >

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/profilPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#0066FF"
            app:colorPressed="#0066CC"
            app:icon="@drawable/ic_profil"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/searchPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#99FFFF"
            app:colorPressed="#99FFCC"
            app:icon="@drawable/ic_search"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/homePL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#D0CC33"
            app:colorPressed="#D0CC00"
            app:icon="@drawable/ic_home"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/messagePL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#CCFF33"
            app:colorPressed="#CCFF00"
            app:icon="@drawable/ic_message"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/settingPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#CCCCCC"
            app:colorPressed="#CCCCCC"
            app:icon="@drawable/ic_setting"/>


    </com.imangazaliev.circlemenu.CircleMenu>
</RelativeLayout>
